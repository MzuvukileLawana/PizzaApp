@model IEnumerable<Pizza.Models.CustomerOrderHistory_Result>
@{
    ViewBag.Title = "CustOrderHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="startYourOrder" style="height:30px;  margin: 10px;">
    <p></p>
</div>

<div class="startYourOrder" style="height:50px; background:#040000; color: #f8d514;  margin: 10px; font-size:35px;font-weight:bold; text-align:center; ">
    <p>My Order History</p>
</div>




    <div class="table-responsive" style="background:#f4f4f4; padding-bottom:260px;">
        <table class="table table-striped table-bordered table-hover table-condensed">
            
            @foreach (var item in Model)
            {



                <div class="orderHistory" style="font-weight: bold; ">
                    <fieldset>
                        <legend>@Html.DisplayFor(modelItem => item.OrderDate)</legend>
                        <div class="col-md-12">
                            <div class="col-md-4">
                         
                                    <p>Order No: @Html.DisplayFor(modelItem => item.OrderId)</p>
                                    
                                        <p>Pizza Name: @Html.DisplayFor(modelItem => item.PizzaName) </p>

                                     
                                            <p>Pizza Size: @Html.DisplayFor(modelItem => item.SizeOfPizza)</p>
                                      
                                </div>
                            <div class="col-md-4">
                               
                                    <p>Topping: @Html.DisplayFor(modelItem => item.Description)</p>
                                  
                                        <p>Cool Drink: @Html.DisplayFor(modelItem => item.Flavour)</p>
                                        
                                            <p>Order Method: @Html.DisplayFor(modelItem => item.Delivery)</p>
                                           
                                            
                                        </div>
                            <div class="col-md-4">
                                
                                    <p>Delivery Address: @Html.DisplayFor(modelItem => item.DeliveryAddress) </p>
                                  
                                        <p>Contact Number: @Html.DisplayFor(modelItem => item.ContactNumber)</p>
                                       
                                            <p>Total Amount: R @Html.DisplayFor(modelItem => item.Total_Amount)</p>
                                        
                                </div>
                            </div>
                    </fieldset>
                </div>
               <p>-</p>

            }

        </table>
    </div>


