            <div class="modal-header">
                <h3 class="modal-title"><b>You can also share your feedback with us by filling in this form:</b></h3>

            </div>


            <div class="rowFeedback">
                @using (Html.BeginForm())
                {
                    <div class="col-md-6" style="margin-top: 5px;">

                       
                        <div class="form-group">
                            <label for="name"><b>Name:<span class="required">*</span></b></label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" required="required">
                        </div>
                        <div class="form-group">
                            <label for="subject"><b>Subject:<span class="required">*</span></b></label>
                            <select class="form-control" id="subject" name="subject" required="required">
                                <option></option>
                                <option>General</option>
                                <option>Online Ordering</option>
                                <option>Complaints</option>
                                <option>Compliments</option>
                                <option>Advertising</option>
                              


                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label for="comment"><b>Comment:<span class="required">*</span></b></label>
                            <textarea class="form-control" id="comment" name="comment" rows="4" placeholder="Write something..." required="required"></textarea>
                        </div>
                        
                    </div>
                    <div class="col-md-6" style="margin-top: 5px;">


                        <div class="form-group">
                            <label for="email"><b>Email address:<span class="required">*</span></b></label>
                            <input type="email" class="form-control" id="emailAddress" name="emailAddress" aria-describedby="emailHelp" placeholder="Enter email" required="required">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div>
                        <div class="form-group">
                        <label for="phoneNumber"><b>Phone Number:<span class="required">*</span></b></label>
                        <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" aria-describedby="emailHelp" placeholder="Enter phone number" required="required">
                        <small id="emailHelp" class="form-text text-muted"><br />We'll never share your phone number with anyone else.</small>
                    </div>


                                <p><b><span class="NB">NB</span>: all field are required</b></p>
                                <button type="submit" class="btn btn-default" style="padding-left: 85px; padding-right:85px; height:52px; padding-left:92px; padding-right:92px;" >Send Feedback</button>
                        @if (ViewBag.Sent == true)
                        {
                            <p class="successful" style="color:green; font-weight:bold;"><b>@ViewBag.Successful</b></p>
                        }
                        </div>
                 
                }
