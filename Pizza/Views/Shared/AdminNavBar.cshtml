<!DOCTYPE html>

<html>


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")

    <script src="~/Scripts/jquery-1.7.1.min.js"></script>


    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/login.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <p style="font-size:5px; "><h3><b><span class="logoName">Mzu's</span>Pizza.com</b></h3></p>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="color:lightgray"></ul>





                <div class="loginBtn" style="float:right;">
                    
                    <a class="btn btn-default" style="background:#f8d514; " @Html.ActionLink("Back to the website", "Index", "Home")></a>
                </div>

                
        </div>
    </div>
        </div>
    <div class="container body-content">
        <p>.</p>
        <div class="container body-content" style="background: #f8d514; border:dotted;">
            <div class="col-md-12">
            <div class="row" style="padding-bottom:5px; ">
                <div class="col-md-3" style="height:20px; border:#040000; ">
                    

                    @*--------------*@
                    <div class="dropD">
                        <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                           
                            <div class="btn-group" role="group">
                                <button id="btnGroupDrop1" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="padding-left:80px; padding-right:80px; color: #f8d514;">Add</button>
                                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 33px, 0px); top: 0px; left: 0px; will-change: transform;">

                                    <a class="dropdown-item" style="font-weight:bold; font-size: 18px;" @Html.ActionLink("Add Customer", "AdminInsertCust", "AdminPage")</a><br />
                                    <a class="dropdown-item" style="font-weight:bold; font-size: 18px;" @Html.ActionLink("Add Order", "AdminInsertCust", "AdminPage")</a><br />
                                  
                                </div>
                            </div>
                        </div>
                        <p></p>
                    </div>

                    @*--------------*@


                </div>


                <div class="col-md-3" style="height:20px;border:#040000;">
                    
                    <div class="dropD">
                        <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                           
                            <div class="btn-group" role="group">
                                <button id="btnGroupDrop1" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="padding-left:80px; padding-right:80px;color: #f8d514;">Edit</button>
                                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 33px, 0px); top: 0px; left: 0px; will-change: transform;">

                                    <a class="dropdown-item" style="font-weight:bold; font-size: 18px;" @Html.ActionLink("Update Pizza Price", "UpdatePizza", "AdminPage")</a><br />
                                    <a class="dropdown-item" style="font-weight:bold; font-size: 18px;" @Html.ActionLink("Update Cool Drink Price", "UpdateDrink", "AdminPage")</a><br />
                                    <a class="dropdown-item" style="font-weight:bold; font-size: 18px;" @Html.ActionLink("Update Pizza Size Price", "UpdateSize", "AdminPage")</a><br />
                                    <a class="dropdown-item" style="font-weight:bold; font-size: 18px;" @Html.ActionLink("Update Pizza Topping Price", "UpdateTopping", "AdminPage")</a><br />

                                </div>
                            </div>
                        </div>
                        <p></p>
                    </div>

                    </div>

                <div class="col-md-3" style="height:20px;border:#040000; ">
                    
                    <div class="dropD">
                        <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                           
                            <div class="btn-group" role="group">
                                <button id="btnGroupDrop1" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="padding-left:80px; padding-right:80px;color: #f8d514;">View</button>
                                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 33px, 0px); top: 0px; left: 0px; will-change: transform;">

                                    <a class="dropdown-item" style="font-weight:bold; font-size: 18px;" @Html.ActionLink("Customers", "ViewCustomers", "AdminPage")</a><br />
                                    <a class="dropdown-item" style="font-weight:bold; font-size: 18px;" @Html.ActionLink("Pizza Ordered", "OrderHistory", "AdminPage")</a><br />
                                    <a class="dropdown-item" style="font-weight:bold; font-size: 18px;" @Html.ActionLink("Available Drinks", "AvailableDrink", "AdminPage")</a><br />
                                    <a class="dropdown-item" style="font-weight:bold; font-size: 18px;" @Html.ActionLink("Available Pizza Sizes", "ViewBase", "AdminPage")</a><br />
                                    <a class="dropdown-item" style="font-weight:bold; font-size: 18px;" @Html.ActionLink("Available Pizza Topping", "ViewTopping", "AdminPage")</a><br />
                                    <a class="dropdown-item" style="font-weight:bold; font-size: 18px;" @Html.ActionLink("Available Pizza", "ViewPizza", "AdminPage")</a><br />
                                    <a class="dropdown-item" style="font-weight:bold; font-size: 18px;" @Html.ActionLink("Feedback", "ViewFeedback", "AdminPage")</a>
                                </div>
                            </div>
                        </div>
                        <p></p>
                    </div>
                </div>

                <div class="col-md-3" style="height:20px;border:#040000;">
                    
                    <div class="dropD">
                        <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                           
                            <div class="btn-group" role="group" style="width:100%;">
                                <button id="btnGroupDrop1" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="padding-left:80px; padding-right:80px;color: #f8d514;">Delete</button>
                                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 33px, 0px); top: 0px; left: 0px; will-change: transform;">

                                    <a class="dropdown-item" style="font-weight:bold; font-size: 18px;" @Html.ActionLink("Delele Customer", "DeleteCustomer", "AdminPage")</a><br />
                                    <a class="dropdown-item" style="font-weight:bold; font-size: 18px;" @Html.ActionLink("Delete Order", "DeleteOrder", "AdminPage")</a>
                              
                                </div>
                            </div>
                        </div>
                        <p></p>
                    </div>
                </div>

            </div>
                </div>
        </div>
        
        <p class="gap" style="height:20px"></p>
       
        @RenderBody()
       <hr />

    </div>
   
</body>
</html>