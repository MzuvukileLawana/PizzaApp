@model IEnumerable<Pizza.Models.OrderHistory>

@{
    ViewBag.Title = "OrderHistory";
    Layout = "~/Views/Shared/AdminNavBar.cshtml";
}


<div class="startYourOrder" style="height:30px;  margin: 10px;">
    <p></p>
</div>

<div class="startYourOrder" style="height:50px; background:#040000; color: #f8d514;  margin: 10px; font-size:35px;font-weight:bold; text-align:center; ">
    <p>Order History</p>
</div>

@if (!Model.Any())
{
    <h3 style="color:#ffffff;">Record is empty</h3>
}
else
{


<div class="table-responsive" style="background:#f4f4f4;">
    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead style="background: gray;">
            <tr>

                <th>
                    Title
                </th>
                <th>
                    Name
                </th>
                <th>
                    Srname
                </th>
                <th>
                    Order No.
                </th>
                <th>
                    Order Date
                </th>
                <th>
                    Pizza Name
                </th>
                <th>
                    Pizza Price
                </th>
                <th>
                    Pizza Size
                </th>
                <th>
                    Size Price
                </th>
                <th>
                    Pizza Topping
                </th>
                <th>
                    Topping Price
                </th>
                <th>
                    Cool Drink
                </th>
                <th>
                    Drink Price
                </th>
                <th>
                    Delivery/Collection
                </th>
                <th>
                    Delivery Address
                </th>
                <th>
                    Contact Number
                </th>
                <th>
                    Total Price
                </th>

                <th></th>
            </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PizzaName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PizzaPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SizeOfPizza)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.percentage)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Flavour)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Add)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Delivery)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DeliveryAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Total_Amount)
                        </td>



                    </tr>
                </tbody>
            }

    </table>
    </div>
}