
@{
    ViewBag.Title = "DeleteOrder";
    Layout = "~/Views/Shared/AdminNavBar.cshtml";
}

<div class="startYourOrder" style="height:50px; background:#040000; color: #f8d514;  margin: 10px; font-size:35px;font-weight:bold; text-align:center; ">
    <p>Delete Order</p>
</div>
<div class="col-md-12">
    <form class="modal-content animate" action="/AdminPage/DeleteOrder" method="post">

        <div class="form-group" style="padding-top:20px;font-size:20px; padding-left:13px;">
            <label for="name"><b>Customer order number:</b></label><br />
            <input type="number" class="form-control" id="order" name="order" placeholder="Enter customer order number" required="required">
        </div>

        <button type="submit" class="btn btn-default " style="background: #f8d514">Delete</button>
    </form>
</div>

