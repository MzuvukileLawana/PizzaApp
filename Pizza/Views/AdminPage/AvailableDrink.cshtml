@model IEnumerable<Pizza.Models.CoolDrink>

@{
    ViewBag.Title = "AvailableDrink";
    Layout = "~/Views/Shared/AdminNavBar.cshtml";
}

<div class="startYourOrder" style="height:30px;  margin: 10px;">
    <p></p>
</div>

<div class="startYourOrder" style="height:50px; background:#040000; color: #f8d514;  margin: 10px; font-size:35px;font-weight:bold; text-align:center; ">
    <p>Available Drink</p>
</div>

<div class="table-responsive" style="background:#f4f4f4;">
    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead style="background: gray;">
            <tr>
                <th>
                    Drink Flavour
                </th>
                <th>
                    Drink Price
                </th>
                <th></th>
            </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Flavour)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Add)
                        </td>

                    </tr>
                </tbody>
            }

    </table>
    </div>